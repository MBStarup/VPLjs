<?xml version="1.0" encoding="UTF-8"?>
<root>

    <expressions>
        <expression name="add" description="Adds two numbers a and b">
            <input>
                <type name="a" incoming="allow">number</type>
                <type name="b" incoming="allow">number</type>
            </input>
            <output>
                <type name="result">number</type>
            </output>
        </expression>
        <expression name="subtract" description="Subtracts two numbers a and b">
            <input>
                <type name="a" incoming="allow">number</type>
                <type name="b" incoming="allow">number</type>
            </input>
            <output>
                <type name="result">number</type>
            </output>
        </expression>
        <expression name="replace" description="Replaces all occurences of a substring in a text">
            <input>
                <type name="input" incoming="require">text</type>
                <type name="find" incoming="allow">text</type>
                <type name="replace-with" incoming="allow">text</type>
            </input>
            <output>
                <type name="result">text</type>
            </output>
        </expression>
    </expressions>

    <controls>
        <contol name="if-else" description="A basic if else structure">
            <input>
                <type name="expression" incoming="require">bool</type>
            </input>
        </contol>
    </controls>

    <actions>
        <action name="ban" description="Bans a user">
            <input>
                <type name="user" incoming="require">user</type>
            </input>
        </action>
        <action name="edit" description="Edits a message">
            <input>
                <type name="message" incoming="require">message</type>
                <type name="text" incoming="allow">text</type>
            </input>
        </action>
        <action name="send-message" description="Sends a message">
            <input>
                <type name="channel" incoming="require">channel</type>
                <type name="text" incoming="allow">text</type>
                <!-- <type name="type" incoming="notAllow">messageType</type> -->
            </input>
            <output>
                <type name="id">messageId</type>
            </output>
        </action>
    </actions>
</root>